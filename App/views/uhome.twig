{% extends path_user_template ~ '/home.twig' %}

{% block title %}
    {{ page_title|default('ArtCMS :: User home') }}
{% endblock %}

{% block headtags %}
    <script src="{{ path_url }}{{ user_var.project_static }}/jquery.dataTables.min.js" type="text/javascript"></script>
    <link href="{{ path_url }}{{ user_var.project_static }}/jquery.dataTables.css" rel="stylesheet" type="text/css" media="screen"/>
    <script type="text/javascript">
        $(document).ready(function(){
            if($("#errors").html() == '') {
                $("#errors").hide();
            }

            $('#sortedtable').dataTable({
                "sPaginationType": "full_numbers",
                "aLengthMenu": [[25, 50, -1], [25, 50, "All"]],
                "iDisplayLength": 25,
            });
        });
    </script>
{% endblock %}

{% block contentbody %}
    {{ parent() }}
    {{ body_content }}

    {% if session.get('user_info').utype == 1 %}
        <table class="pure-table-horizontal" id="sortedtable" style="width: 100%">
            <thead>
            <tr>
                <td>id</td>
                <td>category_id</td>
                <td>url</td>
                <td>title</td>
                <td>subtitle</td>
                <td>body</td>
                <td>date_inserted</td>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <td>id</td>
                <td>category_id</td>
                <td>url</td>
                <td>title</td>
                <td>subtitle</td>
                <td>body</td>
                <td>date_inserted</td>
            </tr>
            </tfoot>
            <tbody>
            {% for a in articles %}
                <tr>
                    <td><a href="/{{ a.url }}/">{{ a.id }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.category_id }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.url }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.title }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.subtitle|slice(0, 10) }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.body|slice(0, 100) }}</a></td>
                    <td><a href="/{{ a.url }}/">{{ a.date_inserted }}</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}

